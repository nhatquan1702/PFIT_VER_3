<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".activity.AcceptUserRegister">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cl_DetailPost"
        android:background="@color/gray"
        tools:context=".activity.DuyetBaiVietActivity">
        <TextView
            android:id="@+id/tvTieuDeLBV"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@drawable/a1_grad"
            android:gravity="center"
            android:text="Thông tin học viên đăng ký"
            android:textColor="@color/white"
            android:fontFamily="@font/kanit"
            android:textSize="22sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvHD"
            android:layout_below="@+id/tvTieuDeLBV"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:padding="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/lnHT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvHTHD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/kanit"
                        android:text="Họ tên: "
                        android:textColor="@color/dot_dark_screen"
                        android:textSize="@dimen/text_16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvHoTenHD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/kanit"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnKT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/lnHT"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvKTHD"
                        android:layout_width="wrap_content"
                        android:text="Giới tính: "
                        android:layout_marginStart="5dp"
                        android:textColor="@color/dot_dark_screen"
                        android:textSize="@dimen/text_16"
                        android:fontFamily="@font/kanit"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvKhoaTapHD"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16"
                        android:fontFamily="@font/kanit"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnHTTT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/lnKT"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvNgayHD"
                        android:layout_width="wrap_content"
                        android:text="Tuổi: "
                        android:layout_marginStart="5dp"
                        android:textColor="@color/dot_dark_screen"
                        android:textSize="@dimen/text_16"
                        android:fontFamily="@font/kanit"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvTongTTHD"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/black"
                        android:text=""
                        android:textSize="@dimen/text_16"
                        android:fontFamily="@font/kanit"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/lnHTTT"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvHTTTHD"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/dot_dark_screen"
                        android:text="Số điện thoại:"
                        android:textSize="@dimen/text_16"
                        android:fontFamily="@font/kanit"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvHinhThucTTHD"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/text_16"
                        android:fontFamily="@font/kanit"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnDC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lnA"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/kanit"
                        android:text="Địa chỉ:"
                        android:textColor="@color/dot_dark_screen"
                        android:textSize="@dimen/text_16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDiaChi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/kanit"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16" />
                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnCapNhat"
            android:layout_margin="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:layout_below="@+id/cvHD"
            app:cardBackgroundColor="#FF58C7"
            app:cardCornerRadius="50dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_ui_login">
                <TextView
                    android:id="@+id/tvCapNhat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Duyệt"
                    android:textColor="#fff"
                    android:textSize="20sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvKDuyet"
            android:text="Không duyệt"
            android:textColor="@color/red"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/kanit"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnCapNhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</ScrollView>